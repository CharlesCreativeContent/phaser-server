    <style>
    *{
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
      #button1,#button2,#button3,#button4{
        display: none;
      }
    @media only screen and ( max-width: 500px){
      #button1,#button2,#button3,#button4{
      display: block;
      position: absolute;
      height:10%;
      width:20vw;
      bottom: 0;
      left: 50%;
      opacity: 0.5;
      transform: translate(-150%, -50%);
      }
      #button2{
      transform: translate(-50%, -100%);
      }
      #button3{
      transform: translate(-50%, 0);
      }
      #button4{
      transform: translate(50%, -50%);
      }

    }
  </style>

  </head>
  <body style="background:black; height: 100vh; width: 100vw;">
  <button id="button1" type="button" class="btn btn-secondary">◀</button>
  <button id="button2" type="button" class="btn btn-secondary">▲</button>
  <button id="button3" type="button" class="btn btn-secondary">▼</button>
  <button id="button4" type="button" class="btn btn-secondary">▶</button>


  </body>


